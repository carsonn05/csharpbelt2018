@model thebeltexam.Models.LoginUser;
<center>
    <h1>Login:</h1>
    <form asp-action="Login" asp-controller="LoginReg" method="POST">
        <div class="form-group">
            <label asp-for="LoginEmail" class="control-label"></label>
            <input asp-for="LoginEmail" class="form-control" style='width: 350px' placeholder='Enter your email address'>
            <span asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword" class="control-label"></label>
            <input asp-for="LoginPassword" class="form-control" style='width: 350px' placeholder='Enter your password'>
            <span asp-validation-for="LoginPassword"></span>
        </div>
        <button type='submit' class='btn btn-primary'>Login</button>
    </form>
</center>
